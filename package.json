{
  "name": "mobileCrashCourseTemp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-e2e": "RN_SRC_EXT=e2e.js react-native start",
    "test": "jest && detox test",
    "fake-server": "json-server --watch db.json",
    "watch": "jest --watch",
    "e2e": "detox test",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug"
  },
  "dependencies": {
    "@react-native-community/blur": "https://github.com/react-native-community/react-native-blur#tvos",
    "@react-native-community/datetimepicker": "^2.4.0",
    "@react-native-community/netinfo": "^5.9.2",
    "json-server": "^0.15.0",
    "react": "16.11.0",
    "react-native": "https://github.com/react-native-community/react-native-tvos#tvos-v0.62.2",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-navigation": "https://github.com/dlowder-salesforce/react-native-navigation#tvos-0.62.2",
    "react-native-reanimated": "^1.9.0",
    "react-native-ui-lib": "https://github.com/dlowder-salesforce/react-native-ui-lib#tvos",
    "remx": "^2.0.51"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "babel-jest": "^24.9.0",
    "detox": "^12.8.0",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.58.0",
    "mocha": "^6.1.4",
    "react-test-renderer": "16.11.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "mocha",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/mobileCrashCourseTemp/Build/Products/Debug-iphonesimulator/mobileCrashCourseTemp.app",
        "build": "xcodebuild -project ios/mobileCrashCourseTemp.xcodeproj -scheme mobileCrashCourseTemp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
