{
  "name": "mobileCrashCourseTemp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-e2e": "RN_SRC_EXT=e2e.js react-native start",
    "test": "jest && detox test",
    "fake-server": "json-server --watch db.json",
    "watch": "jest --watch",
    "e2e": "detox test",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug"
  },
  "dependencies": {
    "json-server": "^0.15.0",
    "react": "16.8.3",
    "react-native": "npm:react-native-tvos@0.60.4-2",
    "react-native-navigation": "https://github.com/dlowder-salesforce/react-native-navigation#tvos",
    "react-native-ui-lib": "https://github.com/dlowder-salesforce/react-native-ui-lib#tvos",
    "remx": "^2.0.51"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "babel-jest": "^24.8.0",
    "detox": "^12.8.0",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.54.0",
    "mocha": "^6.1.4",
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "mocha",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/mobileCrashCourseTemp.app",
        "build": "xcodebuild -project ios/mobileCrashCourseTemp.xcodeproj -scheme mobileCrashCourseTemp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
